{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": null,
  "Parameters": {
    "ServerFlavor": {
      "Default": "m1.micro",
      "Description": "Server flavor to be configured"
    },
    "ServerImage": {
      "Default": "cirros-0.5.2-x86_64-disk",
      "Description": "Server image to be configured"
    },
    "ServerName": {
      "AllowedValues": [
        "server1",
        "server2",
        "server3"
      ],
      "Default": "test",
      "Description": "Name of the instance",
      "MaxLength": 8,
      "MinLength": 3
    }
  },
  "Resources": {
    "Resource0": {
      "Type": "AWS::EC2::VPC"
    },
    "Resource1": {
      "Properties": {
        "CidrBlock": "10.0.0.0/24",
        "VpcId": {
          "Ref": "Net"
        }
      },
      "Type": "AWS::EC2::Subnet"
    },
    "Resource2": {
      "Properties": {
        "ImageId": {
          "Ref": "ServerImage"
        },
        "InstanceType": {
          "Ref": "ServerFlavor"
        },
        "SubnetId": {
          "Ref": "Net"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "get_param": "ServerName"
            }
          }
        ]
      },
      "Type": "AWS::EC2::Instance"
    }
  }
}